# =============================================================================
# SMART TREASURY AGENT - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Do NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# NODE/GENERAL
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# -----------------------------------------------------------------------------
# SUPABASE (Required)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------------------------------------------
# ANTHROPIC/CLAUDE (Required)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-key-here

# -----------------------------------------------------------------------------
# DAYTONA (Required for simulations)
# -----------------------------------------------------------------------------
DAYTONA_API_KEY=your-daytona-api-key
DAYTONA_API_URL=https://api.daytona.io

# -----------------------------------------------------------------------------
# PYTHON SERVICE
# -----------------------------------------------------------------------------
# For Docker: http://python-service:8000
# For local dev: http://localhost:8000
PYTHON_SERVICE_URL=http://localhost:8000

# Python service configuration
LOG_LEVEL=info
AUTO_CLEANUP=true                    # Auto-delete Daytona workspaces after simulation
SIMULATION_TIMEOUT=240               # Timeout per simulation in seconds (4 minutes)

# -----------------------------------------------------------------------------
# AI FEATURES (Optional - Feature Flags)
# -----------------------------------------------------------------------------
ENABLE_AGENTIC_WORKFLOW=false        # Use 4-agent workflow
ENABLE_MULTI_AGENT_DEBATE=false      # Use 3-agent debate
ENABLE_HISTORICAL_LEARNING=true      # Learn from past recommendations (default ON)
MAX_CONCURRENT_SCENARIOS=5           # Maximum parallel scenario runs

# -----------------------------------------------------------------------------
# GALILEO OBSERVABILITY (Optional)
# -----------------------------------------------------------------------------
GALILEO_API_KEY=your-galileo-key-here
GALILEO_PROJECT_ID=your-project-id

# -----------------------------------------------------------------------------
# BROWSER USE (Optional)
# -----------------------------------------------------------------------------
BROWSER_USE_API_KEY=your-browser-use-key

# -----------------------------------------------------------------------------
# WORKOS AUTH (Optional)
# -----------------------------------------------------------------------------
WORKOS_API_KEY=your-workos-api-key
WORKOS_CLIENT_ID=your-workos-client-id
WORKOS_REDIRECT_URI=http://localhost:3000/callback

# -----------------------------------------------------------------------------
# FRONTEND
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WORKOS_CLIENT_ID=your-workos-client-id
FRONTEND_URL=http://localhost:3000